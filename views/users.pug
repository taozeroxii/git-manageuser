extends layout

block content
  ul(class ='nav nav-tabs')
    li.nav-item
      a(class='nav-link ' href="index") Home
    li.nav-item
      a(class='nav-link active' href="#") Insert User
    li.nav-item
      a(class='nav-link ' href="../testchart") Chart
  
  .container
    H2(style = 'margin-top:30px;') <center> Insert User </center><hr>

    form(action="/users/add",method="post")
      .row 
         .col-sm-12.col-md-6
            label First Name
            input(type="text",name="firstname",class="form-control" ,maxlength ="20",size="4",required)
         .col-sm-12.col-md-6
            label Last Name
            input(type="text",name="lastname",class="form-control",maxlength ="20",required)
         .col-sm-12.col-md-6
            label E-mail
            input(type="email",name="email",class="form-control",maxlength ="20",required)
         .col-sm-12.col-md-6
            label GENDER
            select(name ="gender" class="custom-select" id="inputGroupSelect01",required)
               <option selected value="">Choose...</option>
               <option value="male">Male</option>
               <option value="Female">Female</option>
      .row 
         .col-sm-12.col-md-6
            button(type="submit" style='margin-top:30px;').btn.btn-block.btn-info INSERT
         .col-sm-12.col-md-6
            button(type="reset" style='margin-top:30px;').btn.btn-block.btn-warning RESET
      hr  
